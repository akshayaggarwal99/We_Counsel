<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.aka.wecounsel.SelectionActivity">

<Button
    android:id="@+id/engineering"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/button_shape"
    android:text="Engineering"
    android:textSize="30dp"
    android:onClick="onEngineeringClick"
    android:layout_marginTop="166dp"
    android:layout_alignParentTop="true"
    android:layout_alignLeft="@+id/medical"
    android:layout_alignStart="@+id/medical" />
    <Button
        android:id="@+id/medical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_shape"
        android:text="Medical"
        android:textSize="30dp"
        android:layout_below="@+id/engineering"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="107dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Select Your Field"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/sinch_purple"
        android:textSize="30sp"
        android:id="@+id/text_field"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp" />

</RelativeLayout>
