<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:id="@+id/layout_3"
    android:paddingLeft="15dp"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:paddingRight="15dp"
    android:background="@drawable/selector_card_background"
    android:descendantFocusability="afterDescendants">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="College"
        android:textColor="@color/primaryColorDark"
        android:id="@+id/item_college"
        android:layout_margin="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:textSize="17dp"
        android:id="@+id/item_open"
        android:layout_below="@+id/item_college"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/item_close"
        android:textSize="17dp"
        android:layout_below="@+id/item_college"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Branch_CODE"
        android:id="@+id/item_branch"
        android:layout_marginBottom="5dp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/item_open"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Branch"
        android:layout_marginTop="5dp"
        android:id="@+id/item_branch_name"
        android:layout_below="@+id/item_branch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="O"
        android:textStyle="bold"
        android:id="@+id/textView2"
        android:textSize="20dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="7dp"
        android:layout_above="@+id/item_branch"
        android:layout_toLeftOf="@+id/item_open"
        android:layout_toStartOf="@+id/item_open" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="C"
        android:layout_marginRight="7dp"
        android:textStyle="bold"
        android:layout_marginTop="7dp"
        android:id="@+id/textView3"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/item_close"
        android:layout_toLeftOf="@+id/item_close"
        android:layout_toStartOf="@+id/item_close" />

</RelativeLayout>